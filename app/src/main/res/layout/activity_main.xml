<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activities.MainActivity">

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/log_recycler_view">

        <TextView
            style="@style/InfoLine"
            android:id="@+id/environment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Base url: http://"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            style="@style/InfoLine"
            android:id="@+id/access_token_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="tendarts_sdk_access_token: "/>

        <TextView
            style="@style/InfoLine"
            android:id="@+id/sender_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="gcm_sender_id: "/>

        <TextView
            style="@style/InfoLine"
            android:id="@+id/model_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="model: "/>

        <TextView
            style="@style/InfoLine"
            android:id="@+id/android_version_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Android version: "/>
        
        <Button
            android:id="@+id/link_device_with_user_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="Link device with user"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#4c4c4c"
        app:layout_constraintTop_toBottomOf="@+id/info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/log_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"/>

</android.support.constraint.ConstraintLayout>
